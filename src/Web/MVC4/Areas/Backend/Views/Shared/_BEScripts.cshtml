@helper Script(string name)
{
    <script src="@Url.Content("~/Scripts/" + name)" type="text/javascript"></script>
}
<script type="text/javascript">
    var local = {};
    local.Ok = "@UiResources.Ok";
    local.Edit = "@UiResources.Edit";
    local.Save = "@UiResources.Save";
    local.Cancel = "@UiResources.Cancel";
    local.Close = "@UiResources.Close";
    local.Confirm = "@UiResources.Confirm";
    local.DeleteConfirm = "@UiResources.Warning_DeleteConfirmation";
    local.jQueryDataTableLanguageUrl = '@Url.Content("~/Scripts/DataTables.language.")' + '@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName.ToLower()' + '.txt';

    var consts = {};
    consts.AjaxSuccess = "@Consts.AjaxSuccess";
</script>

